<h1>Listing mains</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @mains.each do |main| %>
      <tr>
        <td><%= main.title %></td>
        <td><%= main.body %></td>
        <td><%= link_to 'Show', main %></td>
        <td><%= link_to 'Edit', edit_main_path(main) %></td>
        <td><%= link_to 'Destroy', main, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

